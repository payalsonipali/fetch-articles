<?xml version="1.0" encoding="utf-8"?>

<layout>

    <data>
        <variable
            name="news"
            type="com.payal.moengage_fetch_articles.model.News" />
    </data>
    <androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/eight_dp"
        app:cardElevation="@dimen/six_dp">

        <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/eight_dp"
            >

            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/sixty_dp"
                android:layout_height="@dimen/sixty_dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:elevation="@dimen/tweleve_dp"
                android:id="@+id/article_img_card"
                app:cardCornerRadius="@dimen/thirty_dp"
                android:layout_centerHorizontal="true"
                android:shape="ring"
                android:thicknessRatio="1.9">
                <ImageView
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:id="@+id/img"
                    android:contentDescription=""
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true">
                </ImageView>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/headline"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/article_img_card"
                android:layout_marginStart="@dimen/eight_dp"
                android:text="@{news.title}"
                android:textColor="@color/text_color"
                android:textSize="@dimen/twenty_sp"
                android:textStyle="bold"
                android:ellipsize="end"
                android:maxLines="1"
                />
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/author_layout"
                android:layout_marginStart="@dimen/eight_dp"
                android:layout_marginVertical="@dimen/four_dp"
                app:layout_constraintTop_toBottomOf="@id/headline"
                app:layout_constraintStart_toEndOf="@id/article_img_card"
                >
                <TextView
                    android:id="@+id/author_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:text="@string/author_text"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/forteen_sp"
                    android:textStyle="bold"
                    />

                <TextView
                    android:id="@+id/author"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="@id/author_text"
                    android:layout_marginStart="@dimen/two_dp"
                    android:text="@{news.author}"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/forteen_sp"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/author_layout"
                app:layout_constraintStart_toEndOf="@id/article_img_card"
                android:layout_marginStart="@dimen/eight_dp"
                android:text="@{news.content}"
                android:textColor="@color/text_color"
                android:textSize="@dimen/sixteen_sp"
                android:maxLines="3"
                android:ellipsize="end"
                />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/four_dp"
                app:layout_constraintTop_toBottomOf="@id/description"
                app:layout_constraintEnd_toEndOf="parent"
                >
                <TextView
                    android:id="@+id/published_at_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:text="@string/published_text"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/tweleve_sp"
                    android:textStyle="bold"
                    />

                <TextView
                    android:id="@+id/published_at"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="@id/published_at_text"
                    android:layout_marginStart="@dimen/two_dp"
                    android:text="@{news.publishedAt}"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/tweleve_sp"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</layout>